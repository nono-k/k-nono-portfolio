---
interface Props {
  backgroundColor: string;
}
const props = Astro.props;
const { backgroundColor } = props;
const date = new Date();
const year = date.getFullYear();

---

<div class="frame" style=`border-color: var(${backgroundColor});`>
  <div class="frame__inner">
    <div class="frame__line frame__top"></div>
    <div class="frame__line frame__right"></div>
    <div class="frame__line frame__bottom"></div>
    <div class="frame__line frame__left"></div>
  </div>
  <div class="frame__bottom">
    <a class="frame__link" href="https://x.com/kameno_no3" target="_blank">X</a>
    <a class="frame__link" href="https://github.com/nono-k" target="_blank">GitHub</a>
    <div class="frame__year">{year}</div>
  </div>
</div>

<style lang="scss">
  .frame {
    position: fixed;
    width: 100%;
    height: 100%;
    border: 1.25rem solid;
    z-index: 1;
    pointer-events: none;
    &__inner {
      width: 100%;
      height: 100%;
      position: relative;
    }
    &__line {
      position: absolute;
      background-color: var(--black);
      &.frame__top {
        top: 0;
        left: 0;
        width: 100%;
        height: 1px;
      }
      &.frame__right {
        top: 0;
        right: 0;
        width: 1px;
        height: 100%;
      }
      &.frame__bottom {
        bottom: 0;
        left: 0;
        width: 100%;
        height: 1px;
      }
      &.frame__left {
        top: 0;
        left: 0;
        width: 1px;
        height: 100%;
      }
    }
    &__bottom {
      position: absolute;
      bottom: -1.2rem;
      right: 0;
      font-weight: 700;
      font-size: 0.75rem;
      display: flex;
      gap: 0.5rem;
    }
    &__link {
      pointer-events: all;
    }
  }
</style>